extends ./layout/index
block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        .row.testimonios
            each testimonio in testimonios
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                            p.mb-0
                                | #{testimonio.mensaje}
                            footer.blockquote-footer
                                | #{testimonio.nombre}
        .row
            .col-md-12
                h2.d-block.w-100.text-center Â¡Comparte tu Experiencia!
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios", method="POST")

                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)

                        .form-group
                            label(for="email") Email
                            input#email(type="email", placeholder="Tu email ej.: jason@email.com", name="email", class="form-control", value= email)

                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Comparte tu Experiencia", rows=3)= mensaje
                        input.btn.btn-success.btn-block(type="submit")