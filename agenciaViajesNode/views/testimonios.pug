extends ./layout/index
block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        .row
            h2.d-block.w-100.text-center Â¡Comparte tu Experiencia!
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios", method="POST")

                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control")

                        .form-group
                            label(for="email") Email
                            input#email(type="text", placeholder="email@email.com", name="email", class="form-control")

                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Mensaje", rows=3)
                        input.btn.btn-success.btn-block(type="submit")